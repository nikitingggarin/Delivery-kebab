<link rel="stylesheet" href="/stylesheets/courierAccount.css">

<script defer src="/courier.js"></script>
<script src="https://api-maps.yandex.ru/2.1?apikey=6aa51172-eb31-4e02-bf61-a9da1d9858d4&lang=ru_RU"
  type="text/javascript">
  </script>
<script defer src="/mapbasics.js" type="text/javascript"></script>

<div class="d-flex justify-content-center mb-3 mt-3 text-secondary">
  <h4>Личный кабинет</h4>
</div>

<div id="form" class="accForm d-flex justify-content-center">
  <form name="accForm" method="POST" action="/courier" class="d-flex justify-content-center">
    <div>
      <div class="mb-3">
        <input class="form-control w-100 p-2 bg-info text-body" type="text" placeholder="Наименование" name="title">
        <input class="form-control w-100 p-2 bg-info text-body" type="text" placeholder="Фото" name="picture">
        <input class="form-control w-100 p-2 bg-info text-body" type="text" placeholder="Цена без скидки"
          name="original_price">
        <input class="form-control w-100 p-2 bg-info text-body" type="text" placeholder="Цена со скидкой"
          name="discount_price">
        <div class="d-flex justify-content-center">
          <button type="submit" class="btn btn-outline-info">Submit</button>
        </div>
      </div>
    </div>
  </form>
</div>

{{!-- {{#if allOrders}} --}}

<div class="tableDiv">
  {{#if isTrueRaw}}
  <table class="table table-hover" id="tableCour">
    <thead>
      <tr>
        <th scope="col"> </th>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each allOrders}}
      <tr id='a{{this.id}}'>
        <th class="firstCell" scope="row">{{this.title}}</th>
        <td> <img src="{{this.picture}}" width="100" alt=""></td>
        <td>₽ {{this.original_price}}</td>
        <td>₽ {{this.discount_price}}</td>
        <td>
          {{this.customer.phone}}
        </td>
        <td>
          <button type="button" class="btn btn-outline-info" data-id="{{this.id}}">Доставка выполнена</button>
          {{!-- <button type="button" class="btn btn-outline-success btn-sm" data-id="{{this.id}}">Доставка
            выполнена</button> --}}
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <H1 class="text-info">Пока нет доступных заказов</H1>
  {{/if}}
</div>
{{!-- {{/if}} --}}
