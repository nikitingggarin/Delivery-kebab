<link rel="stylesheet" href="/stylesheets/courierAccount.css">
<script defer src="/courier.js"></script>

<div>вы зашли в личный кабинет</div>

<form action="/courier" method="POST">

  <input type="text" placeholder="title" name="title">
  <input type="text" placeholder="pictureURL" name="picture">
  <input type="text" placeholder="original price" name="original_price">
  <input type="text" placeholder="discount price" name="discount_price">
  <button type="submit">Submit</button>
</form>

{{#if allOrders}}

<table id="tableCour">
  {{!-- <th> --}}
  <td>
    title
  </td>
  <td>
    picture
  </td>
  <td>
    original price
  </td>
  <td>
    discounted price
  </td>
  <td>
    discounted price
  </td>

  {{#each allOrders}}
  <tr>
    <td>
      {{this.title}}
    </td>
    <td>
      <img src="{{this.picture}}" width="200" alt="">
    </td>
    <td>
      {{this.original_price}}
    </td>
    <td>
      {{this.discount_price}}
    </td>
    <td>
      {{this.User.phone}}
    </td>
    <td>
      <button data-id="{{this.id}}">Доставка выполнена</button>
    </td>
    {{/each}}
  </tr>
</table>

{{/if}}
