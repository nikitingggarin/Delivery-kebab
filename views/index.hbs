<script defer src="/main.js"></script>

<link rel="stylesheet" href="/stylesheets/index.css">

<script src="https://api-maps.yandex.ru/2.1?apikey=6aa51172-eb31-4e02-bf61-a9da1d9858d4&lang=ru_RU"
  {{!-- "https://api-maps.yandex.ru/2.1/?apikey=6aa51172-eb31-4e02-bf61-a9da1d9858d4&lang=ru_RU" --}}
  type="text/javascript">
  </script>
<script defer src="/mapbasics.js" type="text/javascript"></script>

<div id="map"></div>

<div class="tableDiv">
  {{#if isTrueRaw}}
  <table class="table table-hover" id="table">

    <tbody>
    {{#if notuser}}
      <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col"></th>
        <th class="firstCell" scope="col">без скидки</th>
        <th class="firstCell" scope="col">со скидкой</th>
      </tr>
    </thead>
      {{#each allOrders}}
      <tr id='b{{this.id}}'>
        <th class="firstCell" scope="row">{{this.title}}</th>
        <td> <img src="{{this.picture}}" width="100" alt=""></td>
        <td>₽ {{this.original_price}}</td>
        <td>₽ {{this.discount_price}}</td>
      </tr>
      {{/each}}
      {{/if}}

      {{#if customer}}
      <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col"></th>
        <th class="firstCell" scope="col">без скидки</th>
        <th class="firstCell" scope="col">со скидкой</th>
        <th scope="col">расстояние</th>
        <th scope="col"></th>
      </tr>
    </thead>
      {{#each allOrders}}
      <tr id='b{{this.id}}'>
        <th class="firstCell" scope="row">{{this.title}}</th>
        <td> <img src="{{this.picture}}" width="100" alt=""></td>
        <td>₽ {{this.original_price}}</td>
        <td>₽ {{this.discount_price}}</td>
        <td>
          {{this.distanceString}}
        </td>
         <td>
          <button type="button" class="btn btn-outline-info" data-id="{{this.id}}">заказать</button>
        </td>
      </tr>
      {{/each}}
      {{/if}}

      {{#if courier}}
      <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col"></th>
        <th class="firstCell" scope="col">без скидки</th>
        <th class="firstCell" scope="col">со скидкой</th>
        <th scope="col">расстояние</th>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
       {{#each allOrders}}
      <tr id = 'b{{this.id}}'>
        <th class="firstCell" scope="row">{{this.title}}</th>
        <td> <img src="{{this.picture}}" width="100" alt=""></td>
        <td>₽ {{this.original_price}}</td>
        <td>₽ {{this.discount_price}}</td>
         <td>
          {{this.distanceString}}
        </td>
        <td>
          <button type="button" class="btn btn-outline-info" data-id="{{this.id}}">заказать</button>
          <button type="button" class="btn btn-outline-info" data-idDel="{{this.id}}">удалить</button>
          <a class="btn btn-outline-info" href="/{{this.id}}/edit">редактировать</a>
        </td>
      </tr>
      {{/each}}
      {{/if}}

     
    </tbody>
  </table>
  {{else}}
  <H1 class="text-info">Пока нет доступных заказов</H1>
  {{/if}}
</div>
